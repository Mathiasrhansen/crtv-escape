---
import pic1 from "../assets/featured_berlin1.webp";
import pic2 from "../assets/featured_berlin2.webp";
import pic3 from "../assets/featured_berlin3.webp";
import pic4 from "../assets/featured_berlin4.webp";
---

<!-- Overordnet container -->
<div class="mainContainer">
  <!-- Container til titel -->
  <div class="titleContainer">
    <p class="title">Featured Articles</p>
    <svg
      width="80vw"
      height="1"
      viewBox="0 0 1506 1"
      fill="none"
      xmlns="http://www.w3.org/2000/svg"
    >
      <line y1="0.5" x2="1506" y2="0.5" stroke="white"></line>
    </svg>
    <h1>Unmissable things to see in Berlin</h1>
  </div>
  <div class="cardContainer">
    <div class="card">
      <a href="">
        <img src={pic1.src} alt="" class="cardPic" />
        <p class="cardCategory">Free Gem</p>
        <h2>Street art walk in Berlin</h2>
      </a>
    </div>
    <div class="card">
      <a href="">
        <img src={pic2.src} alt="" class="cardPic" />
        <p class="cardCategory">Free Gem</p>
        <h2>Street art walk in Berlin</h2>
      </a>
    </div>
    <div class="card">
      <a href="">
        <img src={pic3.src} alt="" class="cardPic" />
        <p class="cardCategory">Free Gem</p>
        <h2>Street art walk in Berlin</h2>
      </a>
    </div>
    <div class="card">
      <a href="">
        <img src={pic4.src} alt="" class="cardPic" />
        <p class="cardCategory">Free Gem</p>
        <h2>Street art walk in Berlin</h2>
      </a>
    </div>
  </div>
</div>

<style>
  @font-face {
    font-family: Anton;
    src: url("../../public/fonts/Anton-Regular.ttf");
  }

  @font-face {
    font-family: Geo;
    src: url(../../public/fonts/Geo-Regular.ttf);
  }

  @font-face {
    font-family: Inter;
    src: url(../../public/fonts/Inter_18pt-SemiBold.ttf);
  }

  .mainContainer {
    padding: 3vw 10vw;
    background-color: #333;
  }

  .title {
    color: #fff;
    font-family: Geo;
    font-size: 20px;
    font-style: normal;
    font-weight: 500;
    line-height: 26px;
    text-transform: capitalize;
  }

  h1 {
    color: #fff;
    font-family: Anton;
    font-size: 38px;
    font-style: normal;
    font-weight: 400;
    line-height: 53px;
    text-transform: uppercase;
  }

  a {
    text-decoration: none;
  }

  h1,
  .title {
    margin: 0;
  }

  /* Cards */
  .cardContainer {
    display: flex;
    justify-content: space-between;
  }
  .card {
    display: flex;
    margin-top: 1vw;
  }

  .cardPic {
    max-height: 330px;
    height: 100%;
    width: auto;
  }

  .cardCategory {
    color: #fff;
    text-align: center;
    font-family: Geo;
    font-size: 20px;
    font-style: normal;
    font-weight: 500;
    line-height: 26px;
    text-decoration-line: underline;
    text-decoration-style: solid;
    text-decoration-skip-ink: auto;
    text-decoration-thickness: auto;
    text-underline-offset: auto;
    text-underline-position: from-font;
    text-transform: capitalize;
  }

  h2 {
    color: #fff;
    text-align: center;
    font-family: Inter;
    font-size: 20px;
    font-style: normal;
    font-weight: 400;
    line-height: 26px;
    text-transform: capitalize;
  }

  h2,
  .cardCategory {
    margin: 0;
  }
</style>
