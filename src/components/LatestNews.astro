---
import placeholderBig from "../assets/black_large.png";
import placeholderSquare from "../assets/black_square.png";
---

<!-- Overordnet container -->
<div class="mainContainer">
  <div class="mainArticle">
    <a href="">
      <img src={placeholderBig.src} alt="" class="mainPic" />
      <p class="categoryMain">This Week</p>
      <h1>Street Art in Berlin</h1>
    </a>
  </div>
  <div class="latestContainer">
    <div>
      <p class="latestCategory">News</p>
      <svg
        xmlns="http://www.w3.org/2000/svg"
        width="440"
        height="2"
        viewBox="0 0 442 2"
        fill="none"
      >
        <path d="M0.193359 1H441.193" stroke="#ABABAB"></path>
      </svg>
      <h2>Latest News</h2>
    </div>
    <div class="newsCard" id="first">
      <img src={placeholderSquare.src} alt="" />
      <div class="cardText">
        <p class="cardTitle">Bla bla! Uge 33</p>
        <p class="cardDate">30/9-2025</p>
      </div>
    </div>
    <div class="newsCard">
      <img src={placeholderSquare.src} alt="" />
      <div class="cardText">
        <p class="cardTitle">Bla bla! Uge 33</p>
        <p class="cardDate">30/9-2025</p>
      </div>
    </div>
    <div class="newsCard">
      <img src={placeholderSquare.src} alt="" />
      <div class="cardText">
        <p class="cardTitle">Bla bla! Uge 33</p>
        <p class="cardDate">30/9-2025</p>
      </div>
    </div>
    <div class="newsCard">
      <img src={placeholderSquare.src} alt="" />
      <div class="cardText">
        <p class="cardTitle">Bla bla! Uge 33</p>
        <p class="cardDate">30/9-2025</p>
      </div>
    </div>
  </div>
</div>

<style>
  @font-face {
    font-family: Anton;
    src: url("../../public/fonts/Anton-Regular.ttf");
  }

  @font-face {
    font-family: Geo;
    src: url(../../public/fonts/Geo-Regular.ttf);
  }

  @font-face {
    font-family: Inter;
    src: url(../../public/fonts/Inter_18pt-SemiBold.ttf);
  }
  .mainContainer {
    display: flex;
    margin: 3vw 10vw;
    justify-content: space-between;
  }

  a {
    text-decoration: none;
  }

  /* Main news card */
  .mainPic {
    width: 100%;
    height: auto;
    max-width: 700px;
  }

  .mainArticle {
    display: flex;
    align-items: center;
    text-align: center;
  }

  .categoryMain {
    color: #000;
    text-shadow: 0 4px 4px rgba(0, 0, 0, 0.25);
    font-family: Geo;
    font-size: 28px;
    font-style: normal;
    font-weight: 500;
    line-height: 26px;
    text-decoration-line: underline;
    text-decoration-style: solid;
    text-decoration-skip-ink: auto;
    text-decoration-thickness: auto;
    text-underline-offset: auto;
    text-underline-position: from-font;
    text-transform: capitalize;
  }

  h1 {
    color: #333;
    text-align: center;
    text-shadow: 0 4px 4px rgba(0, 0, 0, 0.25);
    font-family: Anton;
    font-size: 56px;
    font-style: normal;
    font-weight: 400;
    line-height: normal;
    text-transform: uppercase;
  }

  /* Latest news */
  .latestCategory {
    color: #000;
    font-family: Geo;
    font-size: 13px;
    font-style: normal;
    font-weight: 500;
    /* line-height: 26px; */
  }

  h2 {
    color: #000;
    font-family: Anton;
    font-size: 30px;
    font-style: normal;
    font-weight: 400;
    /* line-height: 53px;  */
    text-transform: uppercase;
  }

  .latestCategory,
  h2 {
    margin: 0;
  }

  .cardTitle {
    color: #333;
    font-family: Inter;
    font-size: 16px;
    font-style: normal;
    font-weight: 600;
  }

  .cardDate {
    color: #bcbcbc;
    font-family: Inter;
    font-size: 12px;
    font-style: normal;
    font-weight: 800;
  }

  .cardDate,
  .cardTitle {
    margin: 0;
  }

  .newsCard {
    display: flex;
    margin: 3vw 0;
  }

  #first {
    margin-top: 1vw;
  }

  .cardText {
    display: flex;
    flex-direction: column;
    justify-content: space-between;
    padding-left: 1vw;
  }
</style>
