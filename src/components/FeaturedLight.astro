---
import byhaven from "../assets/byhaven.webp";
import FeatureCard from "./FeatureCardLight.astro";
---

<!-- Overordnet container -->
<div class="mainContainer">
  <!-- Container til titel -->
  <div class="titleContainer">
    <p class="title">Featured Articles</p>
    <svg
      width="80vw"
      height="1"
      viewBox="0 0 1506 1"
      fill="none"
      xmlns="http://www.w3.org/2000/svg"
    >
      <line y1="0.5" x2="1506" y2="0.5" stroke="#333333"></line>
    </svg>
    <h1>Unmissable things to see in Copenhagen</h1>
  </div>
  <div class="cardContainer">
    <FeatureCard
      cardPic={byhaven.src}
      cardCategory="Free Gem"
      cardName="Byhaven"
    />
    <FeatureCard
      cardPic={byhaven.src}
      cardCategory="Free Gem"
      cardName="Byhaven"
    />
    <FeatureCard
      cardPic={byhaven.src}
      cardCategory="Free Gem"
      cardName="Byhaven"
    />
    <FeatureCard
      cardPic={byhaven.src}
      cardCategory="Free Gem"
      cardName="Byhaven"
    />
  </div>
</div>

<style>
  @font-face {
    font-family: Anton;
    src: url(../../public/fonts/Anton-Regular.ttf);
  }

  @font-face {
    font-family: Geo;
    src: url(../../public/fonts/Geo-Regular.ttf);
  }

  @font-face {
    font-family: Inter;
    src: url(../../public/fonts/Inter_18pt-SemiBold.ttf);
  }

  .mainContainer {
    padding: 3vw 10vw;
  }

  .title {
    color: #333333;
    font-family: Geo;
    font-size: 20px;
    font-style: normal;
    font-weight: 500;
    line-height: 26px;
    text-transform: capitalize;
  }

  h1 {
    color: #333333;
    font-family: Anton;
    font-size: 38px;
    font-style: normal;
    font-weight: 400;
    line-height: 53px;
    text-transform: uppercase;
  }

  a {
    text-decoration: none;
  }

  h1,
  .title {
    margin: 0;
  }

  /* Cards */
  .cardContainer {
    display: flex;
    justify-content: space-between;
  }
  @media screen and (max-width: 601px) {
    .cardContainer {
      flex-direction: column;
      align-items: center;
    }
  }
</style>
